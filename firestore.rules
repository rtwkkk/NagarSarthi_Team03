// Firestore Security Rules
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Incidents collection
    match /incidents/{incidentId} {
      allow read: if true;  // Anyone can read
      allow create: if request.auth != null;  // Only authenticated users can create
      // MODIFIED: Allow any authenticated user to update (needed for Dashboard Verified/Rejected actions)
      allow update: if request.auth != null; 
    }
    
    // Users collection
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Notification Preferences
    match /notificationPreferences/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Comments collection
    match /comments/{commentId} {
      allow read: if true;
      allow create: if request.auth != null;
    }
  }
}

// Storage Security Rules
service firebase.storage {
  match /b/{bucket}/o {
    // Allow anyone to read images
    match /{allPaths=**} {
      allow read: if true;
    }
    
    // Allow authenticated users to upload to their folder
    match /incidents/{userId}/{fileName} {
      allow write: if request.auth != null && request.auth.uid == userId;
      allow read: if true;
    }
    
    // Temporary: Allow all writes (for testing - REMOVE IN PRODUCTION)
    match /incidents/{allPaths=**} {
      allow write: if request.auth != null;
      allow read: if true;
    }
  }
}
